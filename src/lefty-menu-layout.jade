polymer-element(name="lefty-menu-layout", \attributes="selected,pageTitle", noscript)
  template
    //- style.
    //-   :host /deep/ core-header-panel[navigation] core-item[active]{
    //-     border-right: 6px solid #f5f5f5;
    //-   }
    core-scaffold
      core-header-panel(navigation, flex, mode="seamed")
        core-toolbar
          a(href="/#/")
            h1 Runner

        core-menu
          core-item(icon="add", label="Add a track", class?="{{selected=='add-track'}}")
            a(href="/#/tracks/add")
          core-item(icon="trending-up", label="Stats", active?="{{selected == 'stats'}}")
            a(href="/#/tracks/stats")
          core-item(icon="search", label="Search", active?="{{selected == 'search'}}")
            a(href="/#/search")

      div(tool) {{pageTitle}}

      div(content)
        content
